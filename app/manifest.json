{
    "manifest_version": 2,
    "name": "mailTrip",
    "short_name": "mailTrip",
    "version": "0.1",
    "author": "DWWR (dwwarnerreyes@gmail.com)",

    "description": "A Productivity App for Chrome and Gmail",

    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [
        "dist/gmailJsLoader.js",
        "dist/extension.js"
    ],

    "permissions": [
        "https://*/*"
    ]
}
